<view class="cates">
    <SearchInput />
    <view class="cates_container">
        <scroll-view scroll-y="{{true}}" class="left_menu">
            <view wx:for="{{leftMenuList}}" wx:key="*this" bindtap="handleItemTap" data-index="{{index}}" class="menu_item {{index===currentIndex?'acti ve':''}}">
                {{item}}
            </view>
        </scroll-view>
        <scroll-view scroll-top="{{scrollTop}}" scroll-y="{{true}}" class="right_content">
            <view class="goods_group" wx:for="{{rightContent}}" wx:key="index1" wx:for-item="item1">
                <view class="goods_title">
                    <text class="delimiter">/</text>
                    <text class="title">{{item1.cat_name}}</text>
                    <text class="delimiter">/</text>
                </view>
                <view class="goods_list">
                    <navigator wx:for="{{item1.children}}" wx:for-index="index2" wx:for-item="item2" wx:key="cat_id" url="/pages/goods_list/index?cid={{item2.cat_id}}">
                        <image class="" src="{{item2.cat_icon}}" mode="widthFix" lazy-load="false"></image>
                        <view class="goods_name">{{item2.cat_name}}</view>
                    </navigator>
                </view>
            </view>
        </scroll-view>
    </view>
</view>